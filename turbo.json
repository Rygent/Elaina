{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["SKIP_ENV_VALIDATION"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputLogs": "full"
    },
    "@elvia/bot#build": {
      "dependsOn": ["^build", "@elvia/database#db:generate"],
      "outputs": ["dist/**"],
      "outputLogs": "full"
    },
    "@elvia/website#build": {
      "dependsOn": ["^build", "@elvia/database#db:generate"],
      "env": ["BETTERSTACK_API_KEY", "DISCORD_APPLICATION_ID", "DISCORD_APPLICATION_SECRET", "AUTH_SECRET", "JWT_SECRET"],
      "outputs": [".next/**", "!.next/cache/**", ".source/**"],
      "outputLogs": "full"
    },
    "lint": {
      "outputLogs": "full"
    },
    "format": {
      "outputLogs": "full"
    },
    "typecheck": {
      "outputLogs": "full"
    },
    "@elvia/database#db:generate": {
      "cache": false,
      "outputLogs": "none"
    },
    "@elvia/database#db:push": {
      "cache": false,
      "outputLogs": "none"
    }
  }
}
